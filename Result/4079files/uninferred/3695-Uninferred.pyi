from nougat.context import Request as Request
from typing import Any, Awaitable, Callable, List, Tuple

MiddlewareType = Callable[..., Awaitable[None]]
ALLOWED_SIGNALS: Any

class Nougat:
    app: Any = ...
    server: Any = ...
    config: Any = ...
    middleware: Any = ...
    signal_manager: Any = ...
    signal: Any = ...
    manager: Any = ...
    debug: bool = ...
    def __init__(self, name: str=...) -> None: ...
    def use(self, *middleware: MiddlewareType) -> None: ...
    async def handler(self, request: Request) -> Tuple[int, str, List[Tuple[str, str]], bytes]: ...
    def run(self, host: str=..., port: int=..., debug: bool=...) -> Any: ...
    async def close_server_async(self) -> None: ...
    async def start_server(self, host: str, port: int=...) -> Any: ...

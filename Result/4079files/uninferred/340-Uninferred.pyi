from flask_security import RoleMixin, UserMixin
from src import BaseMixin, ReprMixin, db
from typing import Any

class UserPermission(BaseMixin, db.Model):
    user_id: Any = ...
    permission_id: Any = ...
    user: Any = ...
    permission: Any = ...

class UserRole(BaseMixin, db.Model):
    user_id: Any = ...
    role_id: Any = ...
    user: Any = ...
    role: Any = ...

class Role(BaseMixin, db.Model, RoleMixin, ReprMixin):
    name: Any = ...
    description: Any = ...
    users: Any = ...

class User(BaseMixin, db.Model, UserMixin, ReprMixin):
    email: Any = ...
    password: Any = ...
    username: Any = ...
    active: Any = ...
    confirmed_at: Any = ...
    last_login_at: Any = ...
    current_login_at: Any = ...
    last_login_ip: Any = ...
    current_login_ip: Any = ...
    login_count: Any = ...
    roles: Any = ...
    permissions: Any = ...
    user_profile: Any = ...
    def has_permission(self, permission: Any): ...

class UserProfile(BaseMixin, db.Model):
    first_name: Any = ...
    last_name: Any = ...
    gender: Any = ...
    dob: Any = ...
    profile_picture: Any = ...
    user_id: Any = ...
    user: Any = ...

class Permission(BaseMixin, db.Model, ReprMixin):
    name: Any = ...
    description: Any = ...
    users: Any = ...
